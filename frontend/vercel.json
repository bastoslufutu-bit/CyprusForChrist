{
    "rewrites": [
        {
            "source": "/api/(.*)",
            "destination": "https://cyprusforchrist-backend.onrender.com/api/$1"
        },
        {
            "source": "/media/(.*)",
            "destination": "https://cyprusforchrist-backend.onrender.com/media/$1"
        },
        {
            "source": "/(.*)",
            "destination": "/index.html"
        }
    ]
}
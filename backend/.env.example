# ==================================
# CYPRUS FOR CHRIST - Configuration
# ==================================
# Copiez ce fichier vers .env et remplissez vos valeurs

# Django Settings
SECRET_KEY=your-secret-key-here-change-in-production
DEBUG=True
ALLOWED_HOSTS=localhost,127.0.0.1

# MySQL Configuration
DB_NAME=cyprus_for_christ
DB_USER=root
DB_PASSWORD=
DB_HOST=localhost
DB_PORT=3306

# OpenAI Configuration
OPENAI_API_KEY=sk-your-openai-api-key-here
OPENAI_MODEL=gpt-3.5-turbo
OPENAI_MAX_TOKENS=500
OPENAI_TEMPERATURE=0.7

# PayPal Configuration
# Mode: sandbox (test) ou live (production)
PAYPAL_MODE=sandbox
PAYPAL_CLIENT_ID=your-paypal-client-id
PAYPAL_CLIENT_SECRET=your-paypal-secret
PAYPAL_CURRENCY=EUR

# WhatsApp Configuration
# Format: +357XXXXXXXXX (numéro Chypre)
WHATSAPP_NUMBER=+357XXXXXXXXX
WHATSAPP_DEFAULT_MESSAGE=Bonjour, je vous contacte depuis Cyprus For Christ

# Email Configuration (pour reçus donations)
EMAIL_BACKEND=django.core.mail.backends.smtp.EmailBackend
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_USE_TLS=True
EMAIL_HOST_USER=your-email@gmail.com
EMAIL_HOST_PASSWORD=your-app-password
DEFAULT_FROM_EMAIL=Cyprus For Christ <noreply@cyprusforchrist.org>

# File Upload Configuration
MAX_PDF_SIZE_MB=50
ALLOWED_PDF_EXTENSIONS=pdf
ALLOWED_IMAGE_EXTENSIONS=jpg,jpeg,png,webp

# Security Settings
SESSION_COOKIE_SECURE=False
CSRF_COOKIE_SECURE=False
SECURE_SSL_REDIRECT=False

# Frontend URL (CORS)
FRONTEND_URL=http://localhost:3000

# Church Information (for receipts)
CHURCH_NAME=Cyprus For Christ
CHURCH_ADDRESS=Adresse de l'église, Chypre
CHURCH_EMAIL=contact@cyprusforchrist.org
CHURCH_PHONE=+357XXXXXXXXX
CHURCH_WEBSITE=https://www.cyprusforchrist.org
